---
interface Props {
  title: string;
  subtitle?: string;
  image: string;
}

const { title, subtitle, image } = Astro.props;
---

<div class="relative h-[80vh] min-h-[600px]">
  <div class="absolute inset-0">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>
  
  <div class="relative h-full flex items-center justify-center text-center text-white px-4">
    <div>
      <h1 class="text-4xl md:text-6xl font-bold mb-4">{title}</h1>
      {subtitle && <p class="text-xl md:text-2xl max-w-2xl mx-auto">{subtitle}</p>}
    </div>
  </div>
</div>