---
import '@fontsource/playfair-display';
import '@fontsource/lato';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Stones Cottage Farm - Experience the Charm of Bronte Moorland" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Stones Cottage Farm</title>
  </head>
  <body class="font-lato">
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 44, 82, 48;
    --accent-light: 76, 140, 83;
  }
  html {
    scroll-behavior: smooth;
  }
  body {
    @apply bg-cream;
  }
  h1, h2, h3, h4, h5, h6 {
    @apply font-playfair;
  }
</style>